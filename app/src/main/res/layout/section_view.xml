<?xml version="1.0" encoding="utf-8"?>
<es.iridiobis.flowbase.SectionView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/section_name" android:layout_centerInParent="true"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/section_to_child"
            android:text="Go to child"
            android:layout_below="@id/section_name"
            android:layout_centerHorizontal="true"/>
</es.iridiobis.flowbase.SectionView>